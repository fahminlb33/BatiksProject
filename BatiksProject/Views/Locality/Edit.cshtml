@model LocalityEditViewModel
@{
    Layout = "_AdminLayout";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">@(Model.IsEdit ? "Edit" : "Tambah") Daerah</h1>
<p class="mb-4">@(Model.IsEdit ? "Edit" : "Tambah") daerah asal batik.</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Data Daerah</h6>
    </div>
    <div class="card-body">
        <form asp-action="Save" method="post">
            <input type="hidden" asp-for="IsEdit" />
            <input type="hidden" asp-for="LocalityId" />

            <div class="form-group row">
                <label for="inputDaerah" class="col-sm-2 col-form-label">Daerah</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputDaerah" asp-for="Name" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </div>
        </form>
    </div>
</div>