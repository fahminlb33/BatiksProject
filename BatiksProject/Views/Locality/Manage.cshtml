@model LocalityManageViewModel
@{
    Layout = "_AdminLayout";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Data Daerah</h1>
<p class="mb-4">Manajemen data daerah asal batik.</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Data Daerah</h6>
    </div>
    <div class="card-body">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-@ViewBag.AlertClass alert-dismissible fade show" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Daerah</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Daerah</th>
                        <th>Aksi</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-outline-warning" href="@Url.Action("Edit", new {localityId = item.LocalityId})">Edit</a>
                                <a class="btn btn-outline-danger" href="@Url.Action("Delete", new {localityId = item.LocalityId})">Hapus</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>