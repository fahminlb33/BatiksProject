@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Batik'sProject - Beranda</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/home.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Batik'sProject</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav nav-pills ml-auto">
                    <li class="nav-item">
                        <a class="nav-link @IsCurrentPage(NavbarClass.Home)" href="@Url.Action("Index", "Home")">Beranda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsCurrentPage(NavbarClass.Catalog)" href="@Url.Action("Index", "Catalog")">Katalog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsCurrentPage(NavbarClass.Search)" href="@Url.Action("Search", "Catalog")">Pencarian</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsCurrentPage(NavbarClass.About)" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Index", "Admin")"><strong>Admin</strong></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    @RenderBody()

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Batik'sProject 2020</p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>

@functions {
    public string IsCurrentPage(NavbarClass navbar)
    {
        return ViewBag.Navbar == navbar ? "active" : null;
    }
}